<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20dp"
        android:gravity="right"
        android:paddingRight="10dp"
        />
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:gravity="right"
        android:paddingRight="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnC"
            style="@style/button_lll2"
            app:backgroundTint="@null"
            android:text="C" />

        <Button
            android:id="@+id/btn10"
            style="@style/button_lll2"
            app:backgroundTint="@null"
            android:text="+/-" />

        <Button
            android:id="@+id/btn11"
            style="@style/button_lll2"
            app:backgroundTint="@null"
            android:text="%" />

        <Button
            android:id="@+id/btn12"
            style="@style/button_lll3"
            app:backgroundTint="@null"
            android:text="/" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn7"
            style="@style/button_lll"
            app:backgroundTint="@null"
            android:text="7"
            />

        <Button
            android:id="@+id/btn8"
            style="@style/button_lll"
            app:backgroundTint="@null"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            style="@style/button_lll"
            app:backgroundTint="@null"
            android:text="9" />

        <Button
            android:id="@+id/btnx"
            style="@style/button_lll3"
            app:backgroundTint="@null"
            android:text="x" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            style="@style/button_lll"
            app:backgroundTint="@null"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            style="@style/button_lll"
            app:backgroundTint="@null"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            style="@style/button_lll"
            app:backgroundTint="@null"
            android:text="6" />

        <Button
            android:id="@+id/btn14"
            style="@style/button_lll3"
            app:backgroundTint="@null"
            android:text="-" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            style="@style/button_lll"
            app:backgroundTint="@null"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            style="@style/button_lll"
            app:backgroundTint="@null"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            style="@style/button_lll"
            app:backgroundTint="@null"
            android:text="3" />

        <Button
            android:id="@+id/btn15"
            style="@style/button_lll3"
            app:backgroundTint="@null"
            android:text="+" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn0"
            app:backgroundTint="@null"
            android:text="0"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="336dp"
            android:layout_height="47dp"
            android:background="@drawable/button_basilu"
            />

        <Button
            android:id="@+id/btn."
            style="@style/button_lll"
            app:backgroundTint="@null"
            android:text="." />


        <Button
            android:id="@+id/btn16"
            style="@style/button_lll3"
            app:backgroundTint="@null"
            android:text="=" />


    </LinearLayout>
</LinearLayout>